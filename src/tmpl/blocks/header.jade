.navbar.navbar-inverse
  .navbar-inner
    .container
      a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.brand(href='/')
        img(src='/img/grunt-logo-small.png', alt='Bocoup')
      .nav-collapse.collapse
        ul.nav
          li
            a(href='/docs')
              i.icon-arrow-right
              span Getting Started
          li(class=(page == 'plugins') && 'active')
            a(href='/plugins')
              i.icon-power-cord
              span Plugins
          li(class=(page == 'docs') && 'active')
            a(href='/docs')
              i.icon-document-alt-stroke
              span Documentation
          li(class=(page == 'api') && 'active')
            a(href='/api')
              i.icon-cog
              span API
        form.navbar-search.pull-right
          input.search-query(type='text', placeholder='Search')
