extends layout

block content
  .container
    .row-fluid
      .span9.page
        .hero-unit
          h1 Grunt Plugins
          section.main
            //- p Many of the tasks you need are already available as Grunt Plugins, and new plugins are published every day. While the plugin listing is more complete, here's a few you may have heard of.
            p This plugin listing is automatically generated from the npm module database. Officially maintained "contrib" plugins are marked with a star 
              span.icon-star 
              |icon and are shown at the top of every search by default.
            p
              small
                i In order for a grunt plugin to be listed here, it must be published on <a href="https://npmjs.org/">npm</a> with the <a href="https://npmjs.org/browse/keyword/gruntplugin">gruntplugin</a> keyword. Additionally, we recommend that you use the <a href="https://github.com/gruntjs/grunt-init-gruntplugin">gruntplugin grunt-init template</a> when creating a grunt plugin.
            #loading
              p Loading plugins...
            .plugin-list#plugins-contrib
            .plugin-list#plugins-all
      .span3
        .well.sidebar-nav.plugins-search
          .nav-header
            i.icon-power-cord
            span Plugins
          .search-options
            div.navbar-search.pull-left
              input.search-query(type='text', placeholder='Search Grunt Plugins', disabled, autofocus)
            p.sort-by Sort plugins list by
            .btn-group.dropdown
                button.btn.btn-large.dropdown-toggle(data-toggle='dropdown')
                  span.choice Title
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='#') Title
                  li
                    a(href='#', data-sort-desc='true') Modified
                  //li
                    a(href='#', data-sort-desc='true') Stars
                  //li
                    a(href='#', data-sort-desc='true') Forks
                  li
                    a(href='#') Author
                  li
                    a(href='#', data-sort-desc='true') Version
            .contrib-only
              label.checkbox
                | Show <strong>contrib</strong> plugins first
                input#contrib-top(type='checkbox')
  script(src='/js/plugins.js')
  script#plugins-latest-template(type='text/template')
    |<h4>Latest plugins</h4>
    |  <dl class="dl-horizontal">
    |  <% _.each(modules, function (el) { %>
    |  <dt><a href="https://npmjs.org/package/<%- el.name %>"><%- el.displayname %></a></dt>
    |  <dd><%- el.description %></dd>
    |  <% }); %>
    |  </dl>
  script#plugins-all-template(type='text/template')
    |<ul class="list">
    |<% _.each(modules, function (el) { %>
    |<li>
    |<a class="plugin <%= el.isContrib ? 'contrib' : '' %>" href="https://npmjs.org/package/<%- el.name %>">
    |<span class="name-description">
    |<span class="title"><%- el.displayName %></span>
    |<% if (el.author) { %>
    |<span class="author <%= el.author.name === 'zzzz'? 'author-hide' : '' %>"> by <%= el.author.name %></span>
    |<% } else { %>
    |<span class="author"></span>
    |<% } %>
    |<span class="desc"><%- el.description %><div class="hide"><%- el.keywords %></div></span>
    |</span>
    |<span class="summary">
    |<span class="modified"><span>Modified</span> <time datetime="<%- el.time.modified %>"><%- el.time.modified %></time></span>
    |<span class="gruntVersion"><span>Grunt Version</span> <%- el.gruntVersion || "N/A" %></span>
    |</span>
    |</a>
    |</li>
    |<% }); %>
    |</ul>
